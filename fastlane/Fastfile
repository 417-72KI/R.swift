fastlane_version "1.86.0"

desc "Runs all the tests"
lane :runalltests do
  cocoapods(repo_update: false)

  sh "cd .. && swift test && mkdir -p build/debug && cp .build/debug/rswift build/debug"

  scan(
    workspace: "ResourceApp.xcworkspace",
    scheme: "ResourceApp",
    clean: true
  )
  scan(
    workspace: "ResourceApp.xcworkspace",
    scheme: "ResourceApp-tvOS",
    clean: true
  )
end
